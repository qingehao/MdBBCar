menu "App Components"
    config APP_USING_LWRB
        bool "Enable LWRB"
        default n

    config APP_USING_LINK
        bool "Enable LINK PROTOCOL X"
        select APP_USING_LWRB
        default y

    config APP_USING_MOTOR
        bool "Enable MOTOR"
        default n

    config APP_USING_SIMPLEFOC
        bool "Enable SIMPLEFOC"
        default n
endmenu

